generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String        @id @default(cuid())
  title       String
  slug        String        @unique
  description String?      
  composition String?      
  care        String?   
  sizes       String?      
  price       Int
  inStock     Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  images      ProductImage[]
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String   
  product   Product  @relation(fields: [productId], references: [id])
  productId String
}
